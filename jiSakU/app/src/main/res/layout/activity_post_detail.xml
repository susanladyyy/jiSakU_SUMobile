<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetailActivity">

  <ImageView
      android:id="@+id/backgroundVideo"
      android:layout_width="350dp"
      android:layout_height="220dp"
      android:layout_marginTop="40dp"
      android:background="@color/logo"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.488"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/avatars" />

  <VideoView
      android:id="@+id/videoViewPostDetail"
      android:layout_width="350dp"
      android:layout_height="220dp"
      android:layout_marginTop="40dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.488"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/postedByTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="16dp"
      android:text="@string/posted_by_textView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/videoViewPostDetail" />

  <TextView
      android:id="@+id/posterName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="16dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/postedByTextView"
      app:layout_constraintTop_toBottomOf="@+id/videoViewPostDetail" />

  <TextView
      android:id="@+id/onTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="16dp"
      android:text="@string/on_textView"
      app:layout_constraintStart_toEndOf="@+id/posterName"
      app:layout_constraintTop_toBottomOf="@+id/videoViewPostDetail" />

  <TextView
      android:id="@+id/dateOfThePost"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="16dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/onTextView"
      app:layout_constraintTop_toBottomOf="@+id/videoViewPostDetail" />

  <ImageView
      android:id="@+id/wishList"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="12dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/postedByTextView"
      app:srcCompat="@drawable/ic_baseline_favorite_24" />

  <ImageView
      android:id="@+id/nonWishList"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="12dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/postedByTextView"
      app:srcCompat="@drawable/ic_outline_favorite_border_24" />

  <TextView
      android:id="@+id/numOfSaves"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="16dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/wishList"
      app:layout_constraintTop_toBottomOf="@+id/posterName" />

  <TextView
      android:id="@+id/titlePostDetail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="60dp"
      android:text="@string/title_input_hint"
      android:textColor="@color/black"
      android:textSize="15sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/numOfSaves" />

  <TextView
      android:id="@+id/captionPostDetail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="24dp"
      android:text="@string/caption_input_hint"
      android:textColor="@color/black"
      android:textSize="15sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/titlePostDetail" />

  <TextView
      android:id="@+id/complexityPostDetail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="40dp"
      android:text="@string/complexity_input_textView"
      android:textColor="@color/black"
      android:textSize="15sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/captionPostDetail" />

  <TextView
      android:id="@+id/categoryPostDetail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:text="@string/category_input_textView"
      android:textColor="@color/black"
      android:textSize="15sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/complexityPostDetail" />

  <TextView
      android:id="@+id/titlePostFromDB"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="72dp"
      android:layout_marginTop="60dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/titlePostDetail"
      app:layout_constraintTop_toBottomOf="@+id/numOfSaves" />

  <TextView
      android:id="@+id/captionPostFromDB"
      android:layout_width="240dp"
      android:layout_height="49dp"
      android:layout_marginStart="52dp"
      android:layout_marginTop="24dp"
      android:text="TextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/captionPostDetail"
      app:layout_constraintTop_toBottomOf="@+id/titlePostFromDB" />

  <TextView
      android:id="@+id/complexityPostFromDB"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginTop="12dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/complexityPostDetail"
      app:layout_constraintTop_toBottomOf="@+id/captionPostFromDB" />

  <TextView
      android:id="@+id/categoryPostFromDB"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="41dp"
      android:layout_marginTop="24dp"
      android:text="TextView"
      app:layout_constraintStart_toEndOf="@+id/categoryPostDetail"
      app:layout_constraintTop_toBottomOf="@+id/complexityPostFromDB" />

  <TextView
      android:id="@+id/commentTitleDetail"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="36dp"
      android:text="@string/comment_title"
      android:textColor="@color/black"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/categoryPostDetail" />

  <TextView
      android:id="@+id/openBracket"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="36dp"
      android:text="("
      android:textColor="@color/black"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintStart_toEndOf="@+id/commentTitleDetail"
      app:layout_constraintTop_toBottomOf="@+id/categoryPostFromDB" />

  <TextView
      android:id="@+id/closeBracket"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="36dp"
      android:text=")"
      android:textColor="@color/black"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/numOfComments"
      app:layout_constraintTop_toBottomOf="@+id/categoryPostFromDB"
      app:textAllCaps="true" />

  <TextView
      android:id="@+id/numOfComments"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="11dp"
      android:layout_marginTop="36dp"
      android:text="0"
      android:textColor="@color/black"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintStart_toEndOf="@+id/commentTitleDetail"
      app:layout_constraintTop_toBottomOf="@+id/categoryPostFromDB" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recylerViewComment"
      android:layout_width="391dp"
      android:layout_height="197dp"
      android:layout_marginTop="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/commentTitleDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>